import React from 'react';
import { render } from 'react-dom';
import SumResult from '../components/DataFetcher.jsx';

const params = new URLSearchParams(Astro.url.search);
const sum = params.get('sum');
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sum Result</title>
</head>
<body>
    <div id="root"></div>

    <script type="module">
      import React from 'react';
      import { render } from 'react-dom';
      import SumResult from '../components/SumResult.jsx';

      const params = new URLSearchParams(window.location.search);
      const sum = params.get('sum');

      const rootElement = document.getElementById('root');
      render(<SumResult sum={sum} />, rootElement);
      <SumResult />
    </script>
</body>
</html>
