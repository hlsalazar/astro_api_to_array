---
const params = Astro.url.searchParams;
const sum = params.get('sum');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Result Page</title>
</head>
<body>
  <h1>Result of Sum</h1>
  {sum !== null ? (
    <p>The sum is: {sum}</p>
  ) : (
    <p>Loading...</p>
  )}
</body>
</html>
