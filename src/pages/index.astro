import React, { useState, useEffect } from 'react';

// Definir estado para almacenar los datos de gaze events
const [items, setItems] = useState([]);

// useEffect para obtener los datos de localStorage cuando la página se carga
useEffect(() => {
  // Función para obtener los datos de localStorage
  function getArrayFromLocalStorage() {
    const data = localStorage.getItem('gazeevents');
    return data ? JSON.parse(data) : [];
  }

  const arrayFromLocalStorage = getArrayFromLocalStorage();
  setItems(arrayFromLocalStorage);
}, []);
---

<html>
  <head>
    <title>My Astro App</title>
  </head>
  <body>
    <ul>
      {items.map((item, index) => (
        <li key={index}>{JSON.stringify(item)}</li>
      ))}
    </ul>
  </body>
</html>
